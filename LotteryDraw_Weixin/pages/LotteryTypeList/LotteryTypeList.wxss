.Operation {
  height: 80rpx;
  display: flex;
  width: 100%;
  background-color: #fff;
}

.Operation .button {
  margin-right: 15rpx;
  width: 140rpx;
  height: 64rpx;
  font-size: 28rpx;
  margin-top: 5rpx;
}

.block {
  width: 100%;
  display: block;
}

.ItemView {
  display: flex;
  width: 100%;
  height: 110rpx;
  margin-top: 8rpx;
  align-items: center;
}

.ItemView .image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 5%;
  margin-left: 20rpx;
}

.ItemView .text {
  margin-left: 20rpx;
  font-size: 28rpx;
  line-height: 100rpx;
}
