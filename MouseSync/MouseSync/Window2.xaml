<Window x:Class="MouseSync.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window2" Height="600" Width="1000" Loaded="Window_Loaded">
    <Grid>
        <DockPanel>
            <DockPanel Height="480" DockPanel.Dock="Top">
                <WindowsFormsHost  Height="480"  Width="480" DockPanel.Dock="Left" Name="WindowsFormsHost1"/>
                <WindowsFormsHost  Height="480"  Width="480" DockPanel.Dock="Right" Name="WindowsFormsHost2"/>
            </DockPanel>
            <DockPanel>
                <Button Name="Button1" Width="60" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button1_Click" >测试</Button>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
